@using EM.Domain;
@{
    ViewData["Title"] = "Projeto EM";
}
@model IEnumerable<EM.Domain.ProjetoEM.EM.Domain.Aluno>

<div class="text-center">
    <h1 class="display-4 ">Projeto EM</h1>
</div>
<br />
<div class="row">
    <div class="col-sm-2">
        <a tabindex="3" class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Cadastrar"><i class="fa fa-user-plus"></i> Novo Aluno</a>
    </div>
</div>
<br />

<form asp-controller="Home" asp-action="Index" method="get" class="card card-sm">
    <div class="card-body row no-gutters align-items-center">
        <div class="col-auto">
            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Pesquisar por:</label>
        </div>
        <div class="col-auto">
            <select class="custom-select my-1 mr-sm-1 form-control" name="pesquisePor" id="selecionadoParaPesquisa">

                <option value="nome" name="nome" id="nome">Nome</option>
                <option value="matricula" name="matricula">Matricula</option>
            </select>
        </div>
        <div class="col">
            <input name="SearchString" class="form-control form-control-lg form-control-borderless" type="text" placeholder="" autocomplete="off" id="pesquisa">
            @*implementar buscar por digitar*@
        </div>
        <div class="col-auto">
            <button class="btn btn-lg btn-success" id="pesq" type="submit" value="Filter"><i class="fa fa-search "></i></button>
        </div>
    </div>
</form>

<br />
<div class="row ">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover ">
            <thead class="text-center">
                <tr>
                    <th scope="col">Matricula</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Nascimento</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Matricula</th>
                        <td scope="row">@item.Nome</td>
                        <td scope="row">@item.Sexo</td>
                        <td scope="row" id="cpf">@item.CPF</td>
                        <td scope="row">@item.Nascimento</td>
                        <td scope="row">
                            <a asp-area="" asp-controller="Home" asp-action="Deletar" asp-route-id="@item.Matricula" onClick="return confirm('Tem ceteza que deseja excluir @item.ToString()?');" class="btn btn-danger btn-sm text-white "><i class="fa fa-trash "></i></a>
                            <a asp-area="" asp-controller="Home" asp-action="Editar" asp-route-id="@item.Matricula" class="btn btn-info btn-sm text-white"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

