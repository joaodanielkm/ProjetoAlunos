@using EM.Domain;
@{
    ViewData["Title"] = "Projeto EM";
}
@model IEnumerable<EM.Domain.ProjetoEM.EM.Domain.Aluno>

<div class="text-center">
    <h1 class="display-4 ">Projeto EM</h1>
</div>
<br />
<div class="row">
    <div class=" col-lg-12" style="text-align: right;">
        <a tabindex="3" class="btn btn-primary  " asp-area="" asp-controller="Home" asp-action="Cadastrar"><i class="fa fa-user-plus"></i> Novo Aluno</a>
    </div>
</div>
<br />

<form asp-controller="Home" asp-action="Index" method="get" class="card card-sm">
    <div class="card-body row no-gutters align-items-center">
        <div class="col-auto">
            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Pesquisar por:</label>
        </div>
        <div class="col-auto">
            <select class="custom-select my-1 mr-sm-1 form-control" name="pesquisePor" id="selecionadoParaPesquisa">

                <option value="nome" name="nome" id="nome" class="form-control">Nome</option>
                <option value="matricula" name="matricula" class="form-control">Matricula</option>
            </select>
        </div>
        <div class="col">
            <input name="SearchString" class="form-control" type="text" placeholder="" autocomplete="off" id="pesquisa">
            @*implementar buscar por digitar*@
        </div>
        <div class="col-auto">
            <button class="btn btn-success" id="pesq" type="submit" value="Filter"><i class="fa fa-search "></i></button>
        </div>
    </div>
</form>

<br />
<div class="row ">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover ">
            <thead class="">
                <tr>
                    <th scope="col" class="text-center">Matricula</th>
                    <th scope="col" class="text-left">Nome</th>
                    <th scope="col" class=" text-center">Sexo</th>
                    <th scope="col" class=" text-center">CPF</th>
                    <th scope="col" class=" text-center">Nascimento</th>
                    <th scope="col" class=" text-center"></th>
                </tr>
            </thead>
            <tbody class="">
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class=" text-center">@item.Matricula</th>
                        <td scope="row" class="text-left">@item.Nome</td>
                        <td scope="row" class=" text-center">@item.Sexo</td>
                        <td scope="row" id="cpf" class=" text-center">@item.CPF</td>
                        <td scope="row" class=" text-center">
                            @Html.TextBoxFor(model => item.Nascimento, "{0:dd/MM/yyyy}", new { @class = " text-center border-0 bg-transparent border-light outline-none", @readOnly="true" })
                        </td>
                        <td scope="row" class=" text-center">
                            <a asp-area="" asp-controller="Home" asp-action="Deletar" asp-route-id="@item.Matricula" onclick="return confirm('Tem ceteza que deseja excluir @item.ToString()?');" class="btn btn-danger btn-sm text-white "><i class="fa fa-trash "></i></a>
                            <a asp-area="" asp-controller="Home" asp-action="Editar" asp-route-id="@item.Matricula" class="btn btn-info btn-sm text-white"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    @if (@ViewBag.Mensagem == "Deletado")
    {

        <script>
            Swal.fire({
                position: 'top-center',
                icon: 'success',
                title: 'Alterado com sucesso!',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
    else if (@ViewBag.Mensagem == "erro")
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Algo deu errado...',
                text: 'Contate o adminsitrador do sistema!',
            })</script>
    }
</div>
