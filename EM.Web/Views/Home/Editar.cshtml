@{
    ViewData["Title"] = "Editar aluno";
}
@model EM.Domain.ProjetoEM.EM.Domain.Aluno


<h4>Editar aluno</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" class="form-control">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row">
                    <div class="col-3 ">
                        <label asp-for="Matricula" class="control-label"></label>
                        <input placeholder="Apenas numeros" type="text" style="text-align:right;" asp-for="Matricula" autocomplete="off" class="form-control" minlength="1" maxlength="9" onkeypress="return onlynumber();" required />
                        <span asp-validation-for="Matricula" class="text-danger"></span>
                    </div>
                    <div class="col-9">
                        <label asp-for="Nome" class="control-label"></label>
                        <input placeholder="Digite o nome do aluno" asp-for="Nome" class="form-control" minlength="3" maxlength="100" required />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Sexo" class="control-label"></label>
                        <select name="sexo" class="form-control" required>
                            <option value="Masculuno">Masculuno</option>
                            <option value="Feminino">Feminino</option>
                        </select>
                    </div>
                    <div class="col">
                        <label asp-for="Nascimento" class="control-label"></label>
                        <input id="nasc" asp-for="Nascimento" class="form-control" maxlength="10" required />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="CPF" class="control-label"></label>
                        <input id="cpf" placeholder="Digite o CPF" asp-for="CPF" class="form-control" autocomplete="off" maxlength="14" type="text" onkeypress="return verificarCPF(this.value)" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                </br>
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <input type="submit" value="Editar" class="btn btn-info" asp-action="Editar" />
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-warning">Voltar</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<h1>@ViewBag.Mensagem</h1>